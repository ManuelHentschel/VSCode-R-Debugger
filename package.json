{
  "name": "r-debugger",
  "displayName": "R Debugger",
  "description": "R Debugger",
  "version": "0.0.1",
  "publisher": "ManuelHentschel",
  "author": {
    "name": "Manuel Hentschel"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ManuelHentschel/VSCode-R-Debugger.git"
  },
  "icon": "images/Rlogo.png",
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onLanguage:r",
    "onLanguage:rd",
    "onLanguage:rmd"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "r",
        "extensions": [
          ".r",
          ".R"
        ],
        "aliases": [
          "R",
          "r"
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "r"
      }
    ],
    "debuggers": [
      {
        "type": "R-Debugger",
        "label": "R Debugger",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${file}"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "R-Debugger",
            "request": "launch",
            "name": "R Debugger",
            "program": "${file}"
          }
        ],
        "configurationSnippets": [
          {
            "label": "R Debug: Launch",
            "description": "Debug the active R file",
            "body": {
              "type": "R-Debugger",
              "request": "launch",
              "name": "R Debugger",
              "program": "${file}"
            }
          }
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "rdebugger",
      "properties": {
        "rdebugger.rterm.windows": {
          "type": "string",
          "default": "\"C:\\Program Files\\R\\R-3.6.3\\bin\\R.exe\"",
          "description": "R.exe path for windows"
        },
        "rdebugger.rterm.mac": {
          "type": "string",
          "default": "/usr/local/bin/R",
          "description": "R path for Mac OS X"
        },
        "rdebugger.rterm.linux": {
          "type": "string",
          "default": "/usr/bin/R",
          "description": "R path for Linux"
        },
        "rdebugger.useRCommandQueue": {
          "type": "boolean",
          "default": true,
          "description": "Whether to queue R commands and send them only if the R-process is idle"
        },
        "rdebugger.waitBetweenRCommands": {
          "type": "integer",
          "default": 0,
          "description": "The time (in ms) to wait between R commands"
        },
        "rdebugger.overwritePrint": {
          "type": "boolean",
          "default": true,
          "description": "Whether to write a new print() function to .GlobalEnv (base::print is not affected)"
        },
        "rdebugger.overwriteCat": {
          "type": "boolean",
          "default": true,
          "description": "Whether to write a new cat() function to .GlobalEnv (base::cat is not affected)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.6",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "await-notify": "1.0.1",
    "vscode-debugadapter": "^1.40.0"
  }
}
