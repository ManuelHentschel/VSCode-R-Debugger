  "version": "0.2.0",
  "configurations": [
    {
      "type": "R-Debugger",
      "request": "launch",
      "name": "R Debugger Global",
      "program": "${file}",
      "debugFunction": false,
      "allowGlobalDebugging": true
    },
    {
      "type": "R-Debugger",
      "request": "launch",
      "name": "R Debugger Function",
      "program": "${file}",
      "debugFunction": true,
      "mainFunction": "main",
      "allowGlobalDebugging": true
    }
  ]
}
